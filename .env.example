# API 설정
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api

# 인증 설정
NEXT_PUBLIC_JWT_SECRET=your-jwt-secret-key-here
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# 외부 API (필요시)
NEXT_PUBLIC_FOOD_API_KEY=your-food-api-key
NEXT_PUBLIC_NUTRITION_API_KEY=your-nutrition-api-key

# 환경 설정
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development

# 업로드 설정
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# 기타 설정
NEXT_PUBLIC_APP_NAME=Calory
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_SUPPORT_EMAIL=support@calory.com
